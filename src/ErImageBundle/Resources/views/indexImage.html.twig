{% extends "ErImageBundle:erbase.html.twig" %}
{% set tab='images'%}
{%block metas %}
  {{ parent() }}
  {%endblock%}
{% block title %}Gestor de Imagenes{%endblock title%}
{% block heading %}
  <div class="col-lg-12">
      <h1 class="page-header">
          Gestion de Imagenes
       </h1>
      <ol class="breadcrumb">
          <li>
              <i class="fa fa-dashboard"></i>  <a href="{{ path('dashboard') }}">Dashboard</a>
          </li>
          <li>
              <i class="fa fa-file-photo-o"></i>  Imagenes
          </li>
      </ol>
  </div>
{% endblock heading %}

{% block body %}
  
   <div class="table-responsive">
      <table class="table table-hover">
          <thead>
              <tr>
                  <th>Subidas el dia ...</th>

                  <th>Expiran el ... </th>
                  <th></th>
                  <th></th>
              </tr>
          </thead>
          <tbody>
              <tr>
              {%for bucket in uploads %}
                  <td>{{bucket.name}}</td>
                  <td>{{bucket.getExpiresAt|date('d M Y')}}</td>
                  <td><a href="{{path('view_images',{'gallery':bucket.getFolder})}}"><i class="fa fa-eye"></i> Ver Imagenes</a></td>
                  <td><a href="{{path('delete_images',{'id':bucket.id})}}"><i class="fa fa-trash"></i> Eliminar</a></td>
              </tr>
              {%endfor%}
          </tbody>
      </table>
    </div>

   
       <div class="col-lg-12 col-md-12 col-sm-12 col-sm-12 col-xs-12">
        <a href="{{ path('upload_images') }}" class="btn btn-danger"><span class="fa fa-plus-circle"> </span> Cargar Nuevas Fotos</a>
       </div>
       <div class="col-lg-12">
         &nbsp;
       </div>


                 

{% endblock body%}

