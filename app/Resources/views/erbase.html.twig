<!DOCTYPE html>
<html lang="en">

<head>
{% block metas %}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
{%endblock%}
    <title>{% block title %}Er Image manage Dashboard{% endblock %}</title>
    {% block stylesheets %}
          <link href="{{ asset('bundles/erimg/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css">
          <link href="{{ asset('bundles/erimg/css/sb-admin.css') }}" rel="stylesheet"  type="text/css">
          <link href="{{ asset('bundles/erimg/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>

    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/"><i class="fa fa-dashboard"></i> ER Admin</a>
            </div>
            <!-- Top Menu Items -->
            
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li{% if tab == 'images'%} class="active"{%endif%}>
                        <a href="{{ path('index_images')}}"><i class="fa fa-fw fa-file-image-o"></i> Imagenes</a>
                    </li>
                    <li {% if tab == 'banner'%} class="active"{%endif%}>
                        <a href="{{ path('list_banner') }}"><i class="fa fa-fw fa-edit"></i> Banners</a>
                    </li>
                 </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>

        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                  {% block heading %}   
                  {% endblock heading %}
                </div>
                <!-- /.row -->
                
                <div class="row">
                   {% block body %}
                   {% endblock body %}
                </div>
                <!-- /.row -->
                
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
    {%block javascript %}
    <!-- jQuery -->
    <script src="{{ asset('bundles/erimg/js/jquery.js') }}"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="{{ asset('bundles/erimg/js/bootstrap.min.js') }}"></script>
    {% endblock %}


</body>

</html>