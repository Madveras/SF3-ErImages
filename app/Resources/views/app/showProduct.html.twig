{% extends "erbase.html.twig" %}
{% block title %}{{product.name}}{%endblock title%}
{% block heading %}
  <div class="col-lg-12">
      <h1 class="page-header">
          {{product.name}}
          <small>id: {{product.id}}</small>
      </h1>
      <ol class="breadcrumb">
          <li>
              <i class="fa fa-dashboard"></i>  <a href="#">ER Admin</a>
          </li>
          <li class="active">
              <i class="fa fa-file-image-o"></i> {{product.name}}
          </li>
      </ol>
  </div>
{% endblock heading %}

{% block body %}
<div class="col-lg-12">
  description: {{product.description}}<br />
  price: {{product.price}}<br />
  category: {{product.category.name}}
  {% if app.debug %}
  {#{ dump(product) }#}
  {% endif %}
</p>
<ul>
{% for product in products %}
  <li>
    <a href="{{ path('show_product',{'id':product.id})}}">{{product.name}}</a>
  </li>
{% endfor %}
</ul>
</div>

{% endblock body%}
